generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

 
 model User{
  id Int @id @default(autoincrement())
  name String
  email String @unique
  phoneNb String
  password String
  role Role
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
 }
enum Role  {
   admin
    freelancer
    client

}

